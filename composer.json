{
    "name": "friendsofhyperf/command-signals",
    "description": "The signals component for Hyperf Command.",
    "type": "library",
    "license": "MIT",
    "authors": [{
        "name": "huangdijia",
        "email": "huangdijia@gmail.com"
    }],
    "require": {
        "php": "^8.0",
        "hyperf/engine": "^1.3.4|^2.0",
        "hyperf/utils": "~3.0.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpstan/phpstan": "^1.0",
        "swoole/ide-helper": "dev-master",
        "swow/swow": "dev-develop"
    },
    "suggest": {
        "ext-swoole": ">=4.6.0",
        "ext-swow": ">=1.0.0"
    },
    "autoload": {
        "psr-4": {
            "FriendsOfHyperf\\CommandSignals\\": "src/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "extra": {
        "hyperf": {
            "config": "FriendsOfHyperf\\CommandSignals\\ConfigProvider"
        }
    },
    "scripts": {
        "analyse": "phpstan analyse --memory-limit 512M -l 0 -c phpstan.neon ./src",
        "cs-fix": "php-cs-fixer fix $1"
    }
}
